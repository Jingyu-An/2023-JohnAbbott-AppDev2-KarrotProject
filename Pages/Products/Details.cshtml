@page
@using Karrot.Models
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Karrot.Pages.Products.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<head>
    <link rel="stylesheet" href="~/css/productDetails.css"/>
</head>
@* *@
