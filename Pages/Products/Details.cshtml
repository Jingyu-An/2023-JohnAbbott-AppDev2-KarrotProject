@page
@using Karrot.Models
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Karrot.Pages.Products.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div>
    <h2>@Html.DisplayFor(model => model.Product.ProductName)</h2>
    <p style="text-align: right; font-size: small">
        @Html.DisplayFor(model => model.Product.CreateAt)
    </p>
    <hr/>
    <div class="text-center" style="padding-bottom: 40px">
        <img src="@Model.Image" alt=""
             style="max-height: 500px; width: auto;"/>
    </div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.ProductDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.ProductDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.ProductPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.ProductPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Category)
        </dt>
        <dd class="col-sm-10">
            @Model.CategoryName
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Address)
        </dt>
        <dd class="col-sm-10">
            @Model.Address
        </dd>
        @if (User.Identity.Name != null)
        {
            <div class="row">
                <form method="post" class="d-flex flex-column gap-3">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Comment.CommentBody" class="control-label">Comment</label>
                        <textarea asp-for="Comment.CommentBody" class="form-control"></textarea>
                        <span asp-validation-for="Comment.CommentBody" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Submit Comment" class="btn btn-primary"/>
                    </div>
                </form>
            </div>
        }
        else
        {
            <p class="text-center">Please <a asp-area="Identity" asp-page="/Account/Login">login</a> to leave a comment.</p>
        }

    </dl>
</div>
@if (Model.Comments != null || Model.Comments.Count > 0)
{
    <div class="row">
        <div class="col-12">
            <div class="list-group">
                @foreach (var comment in Model.Comments)
                {
                    <div class="list-group-item">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1">@comment.CommentUser.UserName</h5>
                            <small>@comment.CommentCreated</small>
                        </div>
                        <p class="mb-1">@comment.CommentBody</p>
                        @if (User.Identity.Name == comment.CommentUser.UserName)
                        {
                            <a asp-page="./Edit" asp-route-id="@comment.CommentId">Edit</a> 
                            <a asp-page="./Details" asp-route-id="@comment.CommentId">Details</a> 
                            <a asp-page="./Delete" asp-route-id="@comment.CommentId">Delete</a>
                        }
                  </div>
                }

            </div>
        </div>
    </div>
}


<div>
    <a asp-page="./Edit" asp-route-id="@Model.Product?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>