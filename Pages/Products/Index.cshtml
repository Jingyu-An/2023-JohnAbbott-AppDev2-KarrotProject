@page
@model Karrot.Pages.Products.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<head>
    @* hero slider api *@
    <link rel="stylesheet" href="~/css/hero.css"/>

</head>
<h1>Index</h1>
<p>
    <a class="btn btn-primary" asp-page="Create">Create New</a>
</p>

<section class="main-product">
    <div class="main-lists">
        <div class="main-list-products">
            @foreach (var item in Model.Product)
            {
                  <a asp-page="./Details" asp-route-id="@item.Id" class="main-a">
                    @* <img src="@item.Image?q=82&amp;s=300x300&amp;t=crop" width="100%" height="100%" alt="hot-article" class="main-picture"> *@
                    <img src="@item.Image"
                         width="100%" height="100%" alt="hot-article" class="main-picture">
                    <div class="main-product-name">@Html.DisplayFor(modelItem => item.ProductName)</div>
                    <div class="main-price">$@Html.DisplayFor(modelItem => item.ProductPrice)</div>
                    <div class="main-address"> @Html.DisplayFor(modelItem => item.Address.AddressLine1) , @Html.DisplayFor(modelItem => item.Address.City)</div>
                </a>
            }
        </div>
        <a href="/hot_articles" class="discover-more">Discover more</a>
    </div>
</section>