@page
@model Karrot.Pages.Products.CommentDelete

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Comment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Comment.CommentUser.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Comment.CommentBody)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Comment.CommentId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
<div class="back-to-list">
    <a asp-page="./Index"><img src="~/images/back.svg"/></a>
</div>
