@page
@using Karrot.Models
@model Karrot.Areas.Identity.Pages.Account.Manage.Addresses.IndexModel

@{
    ViewData["Title"] = "Manage Address";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3>@ViewData["Title"]</h3>
<div class="row justify-content-end">
    <div class="col-3">
        <a class="btn btn-primary" asp-page="./Addresses/Create">Create New</a>
    </div>
</div>
<table class="table">
    <thead>
    <tr>
        <th>
            Address
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address[0].City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address[0].State)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address[0].PostalCode)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Address)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AddressLine1)
                @if (item.AddressLine2 != "-")
                {
                    @Html.DisplayFor(modelItem => item.AddressLine2)
                }

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostalCode)
            </td>
            <td>
                <a class="btn btn-outline-primary bold" asp-page="./Addresses/Edit" asp-route-id="@item.AddressId">Edit</a>
                <a class="btn btn-outline-primary bold" asp-page="./Addresses/Details" asp-route-id="@item.AddressId">Details</a>
                <a class="btn btn-outline-danger bold" asp-page="./Addresses/Delete" asp-route-id="@item.AddressId">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}