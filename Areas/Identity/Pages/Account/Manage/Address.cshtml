@page
@using Karrot.Models
@model Karrot.Areas.Identity.Pages.Account.Manage.Addresses.IndexModel

@{
    ViewData["Title"] = "Manage Address";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3>@ViewData["Title"]</h3>
<p>
    <a asp-page="./Addresses/Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            Address
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address[0].City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address[0].State)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address[0].PostalCode)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Address) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AddressLine1)
                @if (item.AddressLine2 != "-")
                {
                    @Html.DisplayFor(modelItem => item.AddressLine2)
                }
                
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostalCode)
            </td>
            <td>
                <a asp-page="./Addresses/Edit" asp-route-id="@item.AddressId">Edit</a> 
                <a asp-page="./Addresses/Details" asp-route-id="@item.AddressId">Details</a>
                <a asp-page="./Addresses/Delete" asp-route-id="@item.AddressId">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
